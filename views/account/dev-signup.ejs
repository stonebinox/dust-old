<% layout('layout') -%>
<link href='/css/app.css?<%= hashCSSapp %>' rel='stylesheet' />

<% block('footer').append(scriptJSapp) %>

<div style="margin-top: 100px;"></div>

<div class="wrapper">
  <div class="main about-us">
    <div class="container">
      <div class="row">
        <div class="col-md-12" style="margin-bottom: 50px;">
          <h3 class="modal_title" style="text-align: center;">If you're a developer who wants to help people make their MVPs, please fill up the form below. And you can start applying for MVPs to work on</h3>
        </div>
      </div>
      <form class="settings-form" method="POST" action="/dev/signup">
        <input type="hidden" name="_csrf" value="<%- _csrf %>"/>
        <input type="hidden" name="isDeveloper" value="true"/>

        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>First Name*</label>
              <input name="firstName" class="form-control border-input" placeholder="First Name" type="text" required>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Last Name*</label>
              <input name="lastName" class="form-control border-input" placeholder="Last Name" type="text" required>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Email*</label>
              <input name="email" class="form-control border-input" placeholder="Email" type="email" required >
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Location*</label>
              <input name="location" class="js-location form-control border-input" placeholder="Last project" type="text" required>

              <input type="hidden" name="locationLL" class="js-location-ll">
              <input type="hidden" name="locationPretty" class="js-location-pretty">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Password*</label>
              <input name="password" class="form-control" placeholder="Password" type="password" required>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Confirm Password*</label>
              <input name="confirmPassword" class="form-control" placeholder="Password" type="password" required>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Website*</label>
              <input name="website" class="form-control border-input" placeholder="Your website/portfolio" type="url" required>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Title</label>
              <input name="title" class="form-control border-input" placeholder="eg: fullstack engineer" type="text">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <div class="form-group">
              <label>Tell us about your yourself*</label>
              <textarea name="introduction" class="form-control" rows="4" placeholder="Tell us about yourself" required></textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Product Hunt profile</label>
              <input name="producthunt" class="form-control border-input" placeholder="Your producthunt profile" type="text">
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>Twitter profile</label>
              <input name="twitter" class="form-control border-input" placeholder="Your twitter profile" type="text">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>I can build an MVP for</label>
              <select class="form-control border-input" name="priceToBuildMVP">
                <option value="$0-$200" >$0-$200</option>
                <option value="$200-$400" >$200-$400</option>
                <option value="$400-$600" >$400-$600</option>
                <option value="More than $600" >More than $600</option>
              </select>
            </div>
          </div>
          <div class="col-md-6 col-sm-6">
            <div class="form-group">
              <label>I can build an MVP in</label>
              <select class="form-control border-input" name="daysToBuildMVP">
                <option value="0-5" >0-5 days</option>
                <option value="5-10" >5-10 days</option>
                <option value="10-15" >10-15 days</option>
                <option value="More than 15" >More than 15 days</option>
              </select>
            </div>
          </div>
        </div>
        <div class="text-center">
          <button class="btn btn-wd btn-success btn-round" type="submit">Create account!</button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- partial('partials/footer') %>
