<% layout('layout') -%>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-autocomplete/1.0.7/jquery.auto-complete.min.css" />
<script src='https://api.mapbox.com/mapbox-gl-js/v0.40.0/mapbox-gl.js'></script>
<script src='https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v2.1.1/mapbox-gl-geocoder.min.js'></script>
<link href='/css/settings.css?<%= hashCSSsettings %>' rel='stylesheet' />

<% block('footer').append('<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-autocomplete/1.0.7/jquery.auto-complete.min.js"></script>') %>
<% block('footer').append(scriptJSsettings) %>

<div class="wrapper">
  <div class="section javascript-components">
    <div class="container">

      <div class="row settings-container">
        <div class="col-md-8 col-sm-12 offset-md-2">
          <%- partial('partials/flash') %>
          <div class="nav-tabs-navigation">
            <div class="nav-tabs-wrapper">
              <ul class="nav nav-tabs" id="tabs" role="tablist">
                <li class="nav-item">
                  <a aria-expanded="true" class="nav-link active" data-toggle="tab" href="#home" role="tab">Profile</a>
                </li>
                <li class="nav-item">
                  <a aria-expanded="false" class="nav-link" data-toggle="tab" href="#profile" role="tab">Account</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="tab-content text-center" id="my-tab-content">
            <div aria-expanded="true" class="tab-pane active" id="home" role="tabpanel">
              <div class="row text-left avatar-change">
                <div class="col-md-12">
                  Change your  <a target="_blank" href="http://en.gravatar.com/support/how-to-sign-up/">avatar</a>.
                </div>
              </div>
              <form class="settings-form" method="POST" action="/settings/profile">
                <input type="hidden" name="_csrf" value="<%- _csrf %>"/>
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>Name</label>
                      <input name="name" value="<%- user.profile.name %>" class="form-control border-input" placeholder="Name" type="text">
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>Email</label>
                      <input value="<%- user.email %>" name="email" class="form-control border-input" placeholder="Email" type="text">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>Where do you live?</label>
                      <input name="location" value="<%- user.profile.locationPretty %>" class="js-location form-control border-input" placeholder="Last project" type="text">

                      <input type="hidden" name="locationLL" value="<%- user.profile.locationLL %>" class="js-location-ll">
                      <input type="hidden" name="locationPretty" value="<%- user.profile.locationPretty %>" class="js-location-pretty">
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>Whats your title?</label>
                      <input value="<%- user.profile.title %>" name="title" class="form-control border-input" placeholder="eg: fullstack engineer" type="text">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12 col-sm-12">
                    <div class="form-group">
                      <label>Tell us about your projects, links to github, portfolio, etc</label>
                      <textarea name="introduction" class="form-control" rows="4" placeholder="Tell us about yourself"><%= user.profile.introduction || '' %></textarea>
                    </div>
                  </div>
                </div>
                <h5 class="settings-line">About your last project</h5>
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>How many days it took?</label>
                      <input name="lastProjectDays" value="<%- user.lastProject.days %>" class="form-control border-input" placeholder="Last project" type="text">
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>How much you charged?</label>
                      <input value="<%- user.lastProject.price %>" name="lastProjectPrice" class="form-control border-input" placeholder="How much ?" type="text">
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button class="btn btn-wd btn-info btn-round" type="submit">Save</button>
                </div>
              </form>
            </div>

            <div aria-expanded="false" class="tab-pane" id="profile" role="tabpanel">
              <div class="tim-title">
                <h3>Change Password</h3>
              </div>
              <form class="settings-form" method="POST" action="/settings/password">
                <input type="hidden" name="_csrf" value="<%- _csrf %>"/>
                <div class="row">
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>New Password</label>
                      <input name="password" class="form-control border-input" type="password">
                    </div>
                  </div>
                  <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                      <label>Confirm Password</label>
                      <input name="confirmPassword" class="form-control border-input" type="password">
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <button class="btn btn-wd btn-info btn-round" type="submit">Change</button>
                </div>
              </form>

              <div class="tim-title">
                <h3>Delete Account</h3>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <p>This action is irreversible and all your data and chats will be deleted.</p>
                </div>
              </div>

              <div class="text-center">
                <button type="button" class="btn btn-outline-danger btn-round" data-toggle="modal" data-target="#myModal">
                  Delete Account
                </button>
              </div>

                <!-- Modal -->
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                      <div class="modal-content">
                          <div class="modal-header">
                              <h5 class="modal-title text-center" id="exampleModalLabel">Delete Account</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                  <span aria-hidden="true">&times;</span>
                              </button>
                          </div>
                          <div class="modal-body">
                            This action is irreversible and all your data and chats will be deleted.
                          </div>
                          <form action="/settings/delete" method="POST" class="form-horizontal">
                            <input type="hidden" name="_csrf" value="<%- _csrf %>"/>
                            <div class="modal-footer">
                                <div class="left-side">
                                    <button type="button" class="btn btn-default btn-link" data-dismiss="modal">Never mind</button>
                                </div>
                                <div class="divider"></div>
                                <div class="right-side">
                                    <button type="submit" class="btn btn-danger btn-link">Delete</button>
                                </div>
                            </div>
                          </form>
                      </div>
                  </div>
                </div>
            </div>

            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<%- partial('partials/footer') %>
